<% if logged_in?(:site_admin)%>
	<p class="breadcrumb blogcrumb">
			<%= link_to fa_icon('file-text'), toggle_status_blog_path(blog), style: blog_status_color(blog) %>
			<%= link_to fa_icon('edit'), edit_blog_path(blog) %>
			<%= link_to fa_icon('trash'), blog, method: :delete, data: { confirm: 'Are you sure you want to delete this post' } %>
</p>
<% end %>