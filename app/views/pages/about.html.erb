<div class="app-card-container">
	<div class="card">
		<h1>About Me</h1>

		<br>

		<div class="row">
			<div class="col-md-4">
				<%= image_tag "profile_image.jpeg", width: 300, alt: "profile Image", class: 'profile-img' %>

				<div class="skills">
					<% @skills.each do |skill| %>
						<div class="skill">
							<h4><%= skill.title%></h4>
							<div class="progress">
								<div class="progress-bar progress-bar-striped bg-warning"
								role="progressbar"
								aria-valuenow="<%= skill.percent_utilized %>"
								aria-valuemax="100"
								style="width: <%= skill.percent_utilized %>%"
								>
								</div>
							</div>
						</div>
					<% end %>
				</div>
			</div>
	
			<div class="col-md-8">
				<p>Stuff about me</p>

				<p>
					<button
						class="btn btn-primary"
						type="button"
						data-toggle="collapse"
						data-target="#jobHistory"
						aria-expanded="false"
						aria-controls="jobHistory"
					>
						Job History
					</button>

					<p>
						<div class="collapse" id="jobHistory">
							<div class="card card-body">
								Job History
							</div>
							<div class="card card-body">
								Job History
							</div>
							<div class="card card-body">
								Job History
							</div>
						</div>
					</p>
				</p>
			</div>
		</div>
	</div>
</div>
